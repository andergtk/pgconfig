{
  "name": "pgconfig-ui",
  "version": "2.0.0",
  "description": "PGConfig.org UI",
  "scripts": {
    "postinstall": "HOME=$OPENSHIFT_REPO_DIR bower install || bower install",
    "prestart": "HOME=$OPENSHIFT_REPO_DIR npm install || npm install",
    "start": "HOME=$OPENSHIFT_REPO_DIR http-server -a ${OPENSHIFT_NODEJS_IP:=localhost} -p ${OPENSHIFT_NODEJS_PORT:=8000} -c-1 ./app || http-server -a ${OPENSHIFT_NODEJS_IP:=localhost} -p ${OPENSHIFT_NODEJS_PORT:=8000} -c-1 ./app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastianwebber/pgconfig.git"
  },
  "keywords": [
    "pgconfig",
    "posgtres",
    "postgresql",
    "pgsql"
  ],
  "author": "Sebastian Webber",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/sebastianwebber/pgconfig/issues"
  },
  "homepage": "https://github.com/sebastianwebber/pgconfig#readme",
  "dependencies": {
    "bower": "^1.7.9",
    "http-server": "^0.9.0"
  }
}
